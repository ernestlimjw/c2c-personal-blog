---
layout: base.njk
title: Blog Posts
---

<div class="blog-list">
    <h1>Blog Posts</h1>
    <div class="posts">
        {%- for post in collections.posts | reverse -%}
            <article class="post-preview">
                <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
                <div class="post-meta">
                    <span class="date">{{ post.date | date }}</span>
                </div>
            </article>
        {%- endfor -%}
    </div>
</div> 